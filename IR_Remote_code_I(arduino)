#define decoder1 1 // set decoder pins
#define decoder2 3
#define decoder3 4
#define decoder4 5

  int led =13;

void setup(){
  Serial.begin(9600);
  pinMode(decoder1, INPUT); // set pins as input
  pinMode(decoder2, INPUT);
  pinMode(decoder3, INPUT);
  pinMode(decoder1, INPUT);
  pinMode(led, OUTPUT); 
}

void loop(){
  if (decoder1 == HIGH)
  {
    digitalWrite(led, HIGH);   // turn the LED on (HIGH is the voltage level)
  }
  
}